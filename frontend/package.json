{
  "name": "ft-transcendence-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc --skipLibCheck || echo 'Build completed with warnings'",
    "build-strict": "tsc",
    "dev": "nodemon --ext ts,js,json,html,css --watch frontend --exec \"tsc --skipLibCheck\"",
    "serve": "http-server . -p 8080",
    "start": "concurrently \"tsc --watch\" \"nodemon --watch frontend --ext html,css,js,json --exec node server.js\""
  },
  "dependencies": {
    "chart.js": "^4.4.3",
    "undici-types": "^7.16.0",
    "typescript": "^5.9.3",
    "babylonjs": "^8.32.2",
    "babylonjs-gltf2interface": "^8.32.2"
  },
  "devDependencies": {
    "typescript": "^5.5.3",
    "@types/node": "^20.14.10",
    "http-server": "^14.1.1",
    "@types/chart.js": "^2.9.41",
    "@types/navigo": "^7.0.1",
    "@types/express": "^4.17.0",
    "nodemon": "^3.0.0"
  }
}
